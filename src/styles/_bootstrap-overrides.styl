html, body
    font-size 18px

// headers

h1
    font-size: 3.2rem

h3
    font-size 1.65rem

h4
    font-size 1.4rem


// other typos

a
    color $main-color


// buttons

.btn
    border none
    border-radius 5px
    box-shadow 0px 1px 2px 0px rgba(0, 0, 0, .2);
    padding 10px 15px

.btn-primary
    background-color $main-color

.btn-lg
    padding 14px 20px
    font-size 1rem

.font-weight-thin {
    font-weight 100
}
