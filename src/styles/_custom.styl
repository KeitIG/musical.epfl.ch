body
    text-align center
    font-family 'source-sans'

    @media (min-width: 576px)
        text-align left

.fullscreen-section
    position relative
    color white
    background-position center
    background-size cover
    background-attachment fixed

    &::before
        content ''
        position absolute
        top 0
        right 0
        bottom 0
        left 0
        background-color rgba(0, 0, 0, .5)

#welcome
    background-image url('../images/bg-guitar.jpg')

#musical
    background-image url('../images/bg-campus-live.jpg')

#subscription
    background-image url('../images/bg-amp.jpg')

#booking
    background-image url('../images/bg-singer.jpg')

#about
    background-image url('../images/bg-bass.jpg')

.main-logo
    display block
    width 270px
    margin auto

.full-height {
    min-height 100vh
}

#about
    .row.main

        .caption
            color $caption-color
            font-size: 0.89rem

footer
    font-size 0.89rem
    color $footer-color

    a
        color $footer-color
        text-decoration underline

        &:hover
            color $footer-color

    .row.main
        min-height 90px

        .logo
            width 124px
            display inline-block
